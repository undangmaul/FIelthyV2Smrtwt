<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Feature.Nutrition.NutritionActivity"
    android:background="@color/white">
<!--    <androidx.constraintlayout.widget.ConstraintLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent">-->

        <LinearLayout
            android:id="@+id/linearLayout11"
            android:layout_width="410dp"
            android:layout_height="120dp"
            android:background="#F3F3F3"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iV_kembali"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_baseline_back_green_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:text="Kategori"
                    android:textColor="#2BA978"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nutrition"
                android:textColor="#2BA978"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="43dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_menu_done" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="24dp"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:text="Nutrition"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="8sp" />


                </LinearLayout>

                <View
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#2BA978" />

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="43dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_menu_onprogress"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal"
                        android:text="Hasil\nPemeriksaan"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="8sp" />


                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout11">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/LL_laukpauk"
                android:layout_width="161dp"
                android:layout_height="131dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_input_text"
                android:elevation="3dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Lauk Pauk"
                    android:textColor="@color/black" />


                <ImageView
                    android:layout_width="73dp"
                    android:layout_height="68dp"
                    android:src="@drawable/lauk"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL_buah"
                android:layout_width="161dp"
                android:layout_height="131dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_input_text"
                android:elevation="3dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Buah - buahan"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="73dp"
                    android:layout_height="68dp"
                    android:src="@drawable/buah"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/LL_makanan"
                android:layout_width="161dp"
                android:layout_height="131dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_input_text"
                android:elevation="3dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Makanan Pokok"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="73dp"
                    android:layout_height="68dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/makan" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL_sayuran"
                android:layout_width="161dp"
                android:layout_height="131dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_input_text"
                android:elevation="3dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Sayuran"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="73dp"
                    android:layout_height="68dp"
                    android:src="@drawable/sayur"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tV_makanan_sehat"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/bg_stress"
        android:elevation="3dp"
        android:gravity="center"
        android:text="Makanan Sehat"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

    <TextView
        android:id="@+id/tV_diet"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_nutrition"
        android:elevation="3dp"
        android:gravity="center"
        android:text="Diet Sehat, aman dan seimbang bagi tubuh"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tV_makanan_sehat" />

