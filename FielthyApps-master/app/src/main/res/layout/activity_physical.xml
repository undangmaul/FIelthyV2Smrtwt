<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Feature.Physical.PhysicalActivity"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout11"
            android:layout_width="410dp"
            android:layout_height="120dp"
            android:background="#F3F3F3"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iV_kembali"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_baseline_back_green_24" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:text="Kategori"
                    android:textColor="#2BA978"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Physical Test"
                android:textColor="#2BA978"
                android:textSize="14sp" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/linearLayout11">


            <LinearLayout
                android:id="@+id/LL_6mwt"
                android:layout_width="323dp"
                android:layout_height="95dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_physical"
                android:elevation="2dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="17dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6MWT" />

                    <TextView
                        android:layout_width="178dp"
                        android:layout_height="wrap_content"
                        android:text="6MWT  adalah ukur tingkat kapasitas latihan kamu dengan tes 6MWT"
                        android:textSize="9sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="88dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/ic_medcheck" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL_balke"
                android:layout_width="323dp"
                android:layout_height="95dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_nutrition"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="88dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/ic_pysical" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="17dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Balke" />

                    <TextView
                        android:layout_width="178dp"
                        android:layout_height="wrap_content"
                        android:text="Balke adalah ukur tingkat kebugaran diri kamu dengan tes balke"
                        android:textSize="9sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL_activity"
                android:layout_width="323dp"
                android:layout_height="95dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_sec_three"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="17dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Health Monitoring" />

                    <TextView
                        android:layout_width="178dp"
                        android:layout_height="wrap_content"
                        android:text="Monitor tingkat kesehatan diri dengan menampilkan score dari gabungan aktivitas yang dilakukan"
                        android:textSize="9sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="88dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/ic_running" />

            </LinearLayout>

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>