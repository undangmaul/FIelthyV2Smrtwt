<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Auth.EditAuthActivity"
    android:background="@color/white">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Edit Authentifikasi"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout17"
        android:layout_width="345dp"
        android:layout_height="339dp"
        android:layout_marginTop="116dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/eT_email_auth"
            android:layout_width="345dp"
            android:layout_height="61dp"
            android:background="@drawable/btn_input"
            android:clickable="false"
            android:drawableLeft="@drawable/ic_email"
            android:editable="false"
            android:elevation="2dp"
            android:paddingLeft="10dp"
            android:text="Richo Fedhia S"
            android:textColor="@color/black" />


        <EditText
            android:id="@+id/eT_password_edit"
            android:layout_width="345dp"
            android:layout_height="61dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_input"
            android:clickable="false"
            android:drawableLeft="@drawable/ic_pass"
            android:elevation="2dp"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/eT_email_baru"
            android:layout_width="345dp"
            android:layout_height="61dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_input"
            android:clickable="false"
            android:drawableLeft="@drawable/ic_email"
            android:elevation="2dp"
            android:paddingLeft="10dp"
            android:text="rich@gmail.com"
            android:textColor="@color/black" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_edit_auth_submit"
        android:layout_width="345dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="56dp"
        android:background="@drawable/btn_submit"
        android:drawableLeft="@drawable/baseline_logout_24"
        android:paddingLeft="30dp"
        android:paddingRight="50dp"
        android:text="Simpan"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout17" />

</androidx.constraintlayout.widget.ConstraintLayout>